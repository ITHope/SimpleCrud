<%= form_for @task, url: update_task_path(@task.id.to_s) do |f| -%>
    <%= f.hidden_field :id, value: @task.id %>
    <%= f.text_field :name, value: @task.name %>
    <%= f.text_field :description, value: @task.description %>
    <%= f.text_field :importance, placeholder: 'importance' %>
    <%= f.text_field :expiry, placeholder: 'entry date', id: "datepicker" %>
    <%= f.check_box :is_done, placeholder: 'is_done', id: "is_done" %>
    <%= f.submit "save" %>
<% end %>